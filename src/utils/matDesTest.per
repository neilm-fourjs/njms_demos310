GROUP g1 : g1, TEXT=%"A Group #1", GRIDCHILDRENINPARENT;
GROUP g2 : g2, TEXT=%"A Group #2";

LABEL lab1 : lab1, TEXT=%"ButtonEdit:",JUSTIFY=RIGHT;
LABEL lab2 : lab2, TEXT=%"DateEdit:",JUSTIFY=RIGHT;
LABEL lab3 : lab3, TEXT=%"Combo:",JUSTIFY=RIGHT;
LABEL lab4 : lab4, TEXT=%"Readonly:",JUSTIFY=RIGHT;
LABEL lab5 : lab5, TEXT=%"Live Field:",JUSTIFY=RIGHT;
LABEL lab6 : lab6, TEXT=%"Dead Field:",JUSTIFY=RIGHT;

BUTTONEDIT f001 = FORMONLY.fld1, ACTION=win;
DATEEDIT f002 = FORMONLY.fld2;
COMBOBOX f003 = FORMONLY.fld3, ITEMS=("Red","Blue","Green"), PLACEHOLDER=%"Pick a Colour";
f004 = FORMONLY.fld4, NOENTRY;
f005 = FORMONLY.fld5;
f006 = FORMONLY.fld6, NOENTRY;
p101 = FORMONLY.fld7;
p102 = FORMONLY.fld8, NOENTRY;
CHECKBOX a = FORMONLY.okay, VALUECHECKED=1, VALUEUNCHECKED=0, TEXT=%"Ok?";
IMAGE logo : logo, IMAGE="logo_dark", SIZEPOLICY=INITIAL,STYLE="noborder center";
IMAGE logo2 : logo2, IMAGE="logo_light", SIZEPOLICY=INITIAL,STYLE="noborder center";

-- normal table
a001 = FORMONLY.col1, TITLE="Title1", IMAGECOLUMN=img;
a002 = FORMONLY.col2, TITLE="Fld2";
PHANTOM FORMONLY.img;

PROGRESSBAR pg = FORMONLY.pg, VALUEMAX=10000;

BUTTON but1 : quit;
BUTTON msg : msg;
BUTTON err: err;

TEXTEDIT ip = FORMONLY.imgpath,STRETCH=X;
TEXTEDIT sf = FORMONLY.stylefile,STRETCH=X;

-- list view table
t201 = FORMONLY.lvcol1, SCROLL, IMAGECOLUMN=lvimg;
t202 = FORMONLY.lvcol2, SCROLL;
PHANTOM FORMONLY.lvimg;

-- arr2 table
t301 = FORMONLY.a2col1, SCROLL, IMAGECOLUMN=a2img, TITLE="Column 1";
t302 = FORMONLY.a2col2, SCROLL, TITLE="Column 2";
