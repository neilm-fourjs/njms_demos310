		COMMAND inactive
		SEPARATOR
		COMMAND quit
	END -- FIle
	GROUP edit (TEXT="Edit")
		COMMAND editcut
		COMMAND editcopy
		COMMAND editpaste
	END -- FIle
	GROUP opt (TEXT="Option")
		COMMAND msg
		COMMAND err
		COMMAND win
		COMMAND wintitle
		COMMAND dyntext
		COMMAND darklogo
		COMMAND lightlogo
		COMMAND uitext
		COMMAND pg
		COMMAND pg50
	END -- opt
	GROUP help (TEXT="Help")
		COMMAND about
	END -- opt
